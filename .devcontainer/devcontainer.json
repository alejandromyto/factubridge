{
  "name": "Verifactu API Dev",
  "dockerComposeFile": [
    "../docker-compose.yml",
    "../docker-compose.devcontainer.yml"
  ],
  "service": "api",
  "workspaceFolder": "/app",
  "overrideCommand": true,
  "remoteUser": "devuser",
  "postCreateCommand": "sudo chown -R devuser:devuser /app && uvicorn app.main:app --host 0.0.0.0 --port 8000 --reload",
  "customizations": {
    "vscode": {
      "settings": {
        "python.defaultInterpreterPath": "/usr/local/bin/python",
        "editor.formatOnSave": true
      },
      "extensions": [
        "ms-python.python",
        "ms-python.vscode-pylance",
        "ms-azuretools.vscode-docker",
        "charliermarsh.ruff",
        "github.vscode-pull-request-github"
      ]
    }
  }
}